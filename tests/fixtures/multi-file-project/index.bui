version: "1.0.0"

---
profile: {
  "name": "Multi-File Project",
  "description": "A comprehensive project demonstrating folder structure organization",
  "logo": "https://example.com/logo.png",
  "website": "https://example.com",
  "contact": "contact@example.com"
}

---
files: ["profile/profile.bui", "services/audio.bui", "services/text.bui", "services/image.bui"]

---
b-pod: "Main Orchestrator" {
  "accepts": ["txt", "mp3", "jpg"],
  "submit": { "label": "Process All", "action": "orchestrate" },
  "api": {
    "url": "https://api.example.com/v1/orchestrate",
    "method": "POST",
    "fileParams": ["inputFile"],
    "bodyTemplate": {
      "file": "{inputFile}",
      "webhook_url": "{webhook_url}"
    },
    "responseType": "json"
  }
}
