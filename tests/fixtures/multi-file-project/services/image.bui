b-pod: "Image Transformer" {
  "accepts": ["jpg", "png", "gif", "webp"],
  "description": "Transform images with filters and resizing",
  "tags": ["image", "transformation"],
  "inputs": [
    {
      "name": "transformation",
      "type": "dropdown",
      "label": "Transformation",
      "options": ["resize", "filter", "crop", "rotate"],
      "required": true
    },
    {
      "name": "width",
      "type": "number",
      "label": "Width (pixels)",
      "required": false,
      "validation": {
        "min": 1,
        "max": 4000
      }
    }
  ],
  "submit": { "label": "Transform Image", "action": "transformImage" },
  "api": {
    "url": "https://api.example.com/v1/image",
    "method": "POST",
    "fileParams": ["imageFile"],
    "bodyTemplate": {
      "file": "{imageFile}",
      "transformation": "{transformation}",
      "width": "{width}",
      "webhook_url": "{webhook_url}"
    },
    "responseType": "file"
  }
}
